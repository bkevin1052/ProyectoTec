<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/banner2" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerViewListaProductos"
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginBottom="123dp" />

    <com.proyectotec.kevin.proyectotec.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="45dp"
        android:layout_marginStart="28dp"
        android:text="@string/id_carritoCompras"
        android:textColor="#B71C1C"
        android:textSize="45sp"
        android:id="@+id/carreta"/>

    <TextView
        android:id="@+id/total"
        android:layout_width="245dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/carreta"
        android:layout_marginEnd="48dp"
        android:text=""
        android:textColor="#B71C1C"
        android:textSize="30dp" />


</RelativeLayout>