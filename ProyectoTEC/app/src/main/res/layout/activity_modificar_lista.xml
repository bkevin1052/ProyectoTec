<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8E1"
    tools:context=".ModificarListaActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/banner2" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:gravity="center"
        android:text="ModificaciÃ³n de listas"
        android:textColor="#B71C1C"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titulo"
        android:text="Busca Lista:"
        android:textColor="#B71C1C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/idBuscaLista"
        android:layout_width="242dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/titulo"
        android:layout_marginEnd="11dp"
        android:hint="Ingrese nombre de lista"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="VER TODAS LAS LISTAS"
        android:id="@+id/opcionVerTodasLista2"
        android:background="@drawable/text_view_circular"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/idBuscaLista"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerViewModificarLista"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp" />


</RelativeLayout>